terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "6.12.0"
    }
  }
}

resource "aws_instance" "surendhar_vm" {
  ami           = "ami-0a7d80731ae1b2435"
  instance_type = local.instance_type[terraform.workspace]

  tags = {
    Name = "surendhar's-vm"
  }
}

// based on the env it will create a different type of instance configurations.

locals {
  instance_type = {
    default = "t2.micro"
    dev     = "t2.medium"
    prod    = "m5.large"
  }
}

# Subcommands:
#     delete    Delete a workspace
#     list      List Workspaces
#     new       Create a new workspace
#     select    Select a workspace
#     show      Show the name of the current workspace