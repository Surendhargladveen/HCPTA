resource "aws_instance" "VMs" {
  ami           = data.aws_ami.os.id
  instance_type = "t2.micro"
  key_name      = "gladveen"

  tags = {
    Name = "Surendhar"
  }
}

data "aws_ami" "os" {
  most_recent = true
  owners = "amazon"

  filter {
    name = "name"
    values = ["amzn2-ami-hvm-*-x86_64-gp2"]
  }
}