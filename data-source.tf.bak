data "aws_ami" "ubuntu" {
  most_recent = true
  owners      = ["amazon"] // We need to specify the owner of the AMI. who is having the AMI e.g. amazon, self, etc.

  filter {
    name   = "name"
    values = ["ubuntu/images/hvm-ssd/ubuntu-jammy-22.04-amd64-server-*"]
  }

  filter {
    name   = "virtualization-type"
    values = ["hvm"]
  }
  filter {
    name   = "root-device-type"
    values = ["ebs"]
  }

}

resource "aws_instance" "fetch_ami" {
  ami           = data.aws_ami.ubuntu.id
  instance_type = "t2.medium"
  key_name      = "gladveen"

  tags = {
    Name = "Fetch AMI"
  }
}